<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.power.naviau.signup"
    tools:showIn="@layout/activity_signup"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:layout_marginBottom="10dp"


        >

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/prompt_email"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/icon3"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon2"

            android:ems="10"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/etPasswordC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon2"
            android:ems="10"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
           />

        <EditText
            android:id="@+id/eEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/icon1"
            android:ems="10"
            android:hint="@string/emailemail"
            android:inputType="textEmailAddress"
            />

        <Button
            android:id="@+id/bLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#303A5E"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:onClick="signup"
            />



        <TextView
            android:id="@+id/tvRegisterHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? login"
            android:textColor="?attr/colorError"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
